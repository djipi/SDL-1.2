#GL=1

CC = armcc
AR = armlib

DEFS = -D__3DO__ -D__inline__="" -littleend
INCLUDE = -Iinclude

ifdef GL
DEFS += -DSDL_VIDEO_OPENGL=1
INCLUDE += 
TARGET = libSDL_gl.a
else
TARGET = libSDL.a
endif

CFLAGS=$(DEFS) $(INCLUDE)

