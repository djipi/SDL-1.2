OBJS = $(SRCS:.c=.o)

TEST = \
	test/checkkeys.o \
	test/graywin.o \
	test/loopwave.o \
	test/testalpha.o \
	test/testbitmap.o \
	test/testcdrom.o \
	test/testerror.o \
	test/testgamma.o \
	test/testgl.o \
	test/testhread.o \
	test/testjoystick.o \
	test/testkeys.o \
	test/testlock.o \
	test/testoverlay.o \
	test/testpalette.o \
	test/testsem.o \
	test/testsprite.o \
	test/testtimer.o \
	test/testver.o \
	test/testvidinfo.o \
	test/testwin.o \
	test/testwm.o \
	test/threadwin.o \
	test/torturethread.o
#	test/testtypes.o	

$(TARGET): copy_config \
	$(OBJS)
	$(AR) -c -p $(TARGET) $(OBJS)
		
test: copy_config \
	$(TEST)

SDL_main: copy_config \
	src/main/3DO/SDL_3DO_main.o
	$(AR) -c -p libSDL_main.a src/main/3DO/SDL_3DO_main.o

copy_config:
	@cp include/SDL_config.h.default include/SDL_config.h

clean:
	rm -f include/SDL_config.h $(OBJS) $(TEST) src/main/3DO/SDL_3DO_main.o
